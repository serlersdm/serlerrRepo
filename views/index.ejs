<% include partials/head %>

 <script>function passVal() {
    alert("Password must be Minimum 6 Characters long, Having one Capital Letter and one Special Character");
};</script>
  <body background="bg.png">
<div class="content">
 <h1 style="font-family: 'Pacifico', cursive; text-align: center; font-size:50px;">Welcome to Serler</h1>
  <div class="title">Create account</div>
  <form action="/login" method="post">
<!--
          <div class="form-group">
          
            <input type="Text" placeholder="Full Name" class="form-control" name="Fname" />
          </div>
-->
          <div class="form-group">
             
              <input  type="text" placeholder="Email" class="form-control font20" name="email" pattern="[a-zA-Z0-9!#$%&amp;'*+\/=?^_`{|}~.-]+@[a-zA-Z0-9-]+(\.[a-zA-Z0-9-]+)*" required oninvalid="this.setCustomValidity('Invalid format')"
    oninput="setCustomValidity('')">
          </div>
          <div class="form-group">
          
            <input id="password" onclick="passVal()" type="password" placeholder="Password" class="form-control font20" name="password" minlength="6" required  />
          </div>
          <div class="form-group">
          
            <input id="confirm_password" type="password" placeholder="Confirm Password" class="form-control font20" name="password" required />
          </div>
          <div>
            <input id="submitBtn" type="submit" class="form-control font20 sgnup" value="Submit" disabled="true"/>
          </div>
        </form>
  <div class="social"> <span>or sign up with social media</span></div>
  <div class="buttons">
        <a href="/auth/facebook" class="btn btn-primary font25"><span class="fa fa-facebook"></span>&nbsp;&nbsp;Facebook</a>
         <!-- <a href="/auth/twitter" class="btn btn-info"><span class="fa fa-twitter"></span> Twitter</a> -->
        <a href="/auth/google" class="btn btn-danger font25"><span class="fa fa-google-plus"></span>&nbsp;&nbsp;Google</a>
  </div>
  <div class="already">Already have an account? <a href="/login"><span class="fa fa-sign-in"></span> Login</a></div>
</div>
    </body>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script>
      $('#password,#confirm_password').on('keyup', function () {
      if ($('#password').val() == $('#confirm_password').val()) {
        $('#confirm_password').css('color', 'green');
           document.getElementById("submitBtn").disabled = false;
      } else {
          $('#confirm_password').css('color', 'red');
           document.getElementById("submitBtn").disabled = true;
      }
        
      });
        
     


        
    </script>
  </html>