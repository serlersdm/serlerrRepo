<% include partials/head %>

  <body>
    <div class="content ">
    <h1 class="headText mt65">Login into Serler</h1>
  <div class="title">Login</div>
        <% if (message != null) { %>
        <div class="alert-danger"><%= message %></div>
        <% } %>

        <form action="/login" method="post">
        <div class="form-group">
        <input type="email" placeholder="Email" class="form-control font20" name="email" required>
        </div>

        <div class="form-group">
        <input type="password" placeholder="Password" class="form-control font20" name="password" required />
        </div>

        <div>
        <button id="loginBtn"type="submit" class="form-control sgnup"><i class="fa fa-sign-in" style="font-size:28px;color:#fff"></i></button>
        </div>

        </form>

        <div class="social"> <span>Don't have an account?</span></div>

        <hr style=" border-top: 0px solid #eee;">

        <div style="text-align:center"><a href="/" class="sgnup">Create an account</a></div>
    </div>
  </body>
</html>
